        select count(1) from t_setmeal_checkgroup where checkgroup_id=#{id}
    </select>-->

    <delete id="deleteById" parameterType="int">
        delete from t_user where id=#{id}
    </delete>

    <select id="findAll" resultType="user">
        select * from t_user
    </select>

